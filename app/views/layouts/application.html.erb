<!DOCTYPE html>
<html>
<head>
  <title>OneDayExperience</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:700,300,600,400' rel='stylesheet' type='text/css'>

</head>

	
<body>

	<!-- Nav bar -->
	<nav id="sidebar" >
		<ul id="icons" class="vertical_align">
			<%= render 'shared/unsignedinicons' %>
		</ul>
	</nav>
	
  <!-- Main page content -->
	<section class="dark full-width no_padding" id='alert_bar'>
		<p class="notice no_padding"><%= notice %></p>
		<p class="alert no_padding"><%= alert %></p>
	</section>
  <container id="bodyContainer">		
  	<%= yield %>
	</container>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
</body>
</html>