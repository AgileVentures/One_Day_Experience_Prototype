<%= form_for @profile do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :profession_id %>
  <%= f.collection_select(:profession_id, Profession.all, :id, :role, :include_blank => true) %>
  <%= f.label :company %>
  <%= f.text_field :company %>
  <%= f.label :work_address %>
  <%= f.text_field :work_address %>
  <%= f.label "Please provide details of your Academic Background" %>
  <%= f.text_field :academic_back %>
  <%= f.label "Are there any required qualifications for your role?" %>
  <%= f.text_field :req_quals %>
  <%= f.label "What skills are required in this role?" %>
  <%= f.text_field :req_skills %>
  <%= f.label "What motivates you to offer a one day experience?" %>
  <%= f.text_field :motivation %>
  <%= f.label "What do you think makes you suitable as a mentor for young people looking for a one day experience?" %>
  <%= f.text_field :suitability %>
  <%= f.label "What can a young person expect from one day in your role" %>
  <%= f.text_field :expectations %>
  <%= f.label :info %>
  <%= f.text_field :info %>
  <%= f.label :full_description %>
  <%= f.text_field :full_description %>
  <%= f.submit %>
<% end %>