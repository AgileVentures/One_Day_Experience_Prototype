<!DOCTYPE html>
<html>
<head>
  <title>OneDayExperience</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

	
<body>


	<nav id="sidebar">
		<ul id="vertical_align">

			<icon class="icons--signin" ><img class="icon" src="/images/icons/profile.svg"></icon>
			<icon class="icons" ><img class="icon" src="/images/icons/profile.svg"></icon>
			<icon class="icons" ><img class="icon" src="/images/icons/profile.svg"></icon>
			<icon class="icons"><img class="icon" src="/images/icons/profile.svg"></icon>
			
		</ul>
	
	</nav>


  <!-- Main page content -->
  <container id="bodyContainer">
	  <p class="notice"><%= notice %></p>
	  <p class="alert"><%= alert %></p>

		
	  <!-- Sign in for professionals/buddies -->
	  <% if !student_signed_in? %>
	    <% if professional_signed_in? %>
	      <%= link_to "Sign out", destroy_professional_session_path, method: :delete %>
	    <% else %>
	      <%= link_to "Sign in", new_professional_session_path %>
	      <%= link_to "Sign up", new_professional_registration_path %>
	    <% end %>
	  <% end %>
	  <br>

	  <!-- Sign in for students -->
	  <% if !professional_signed_in? %>
	    <% if student_signed_in? %>
	      <%= link_to "Student sign out", destroy_student_session_path, method: :delete %>
	    <% else %>
	      <%= link_to "Student sign in", new_student_session_path %>
	      <%= link_to "Student sign up", new_student_registration_path %>
	    <% end %>
	  <% end %>
	  <br>

	  <!-- Sign in for students with Facebook -->
	  <%= link_to "Student sign in with Facebook", student_omniauth_authorize_path(:facebook) %>
  	
  	<%= yield %>
	
	</container>

</body>
</html>
